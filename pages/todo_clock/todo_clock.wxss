.todo_clock_head{
  width: 100%;
  height: 755rpx;
  position: relative;
  background-color: lightblue;
}
.todo_clock{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 260rpx;
  height: 260rpx;
  border: 10rpx solid white;
  border-radius: 50%;
  margin-top: -130rpx;
  margin-left: -130rpx;
  text-align: center;
  line-height: 260rpx;
  font-size: 60rpx;
  font-weight: 600;
  color: #fff;
}
.todo_bottom{
  width: 100vw;
  height: calc(100vh - 755rpx);
  background-color: #d8d8d8;
}
.plan_name{
  width: 100vw;
  height: 50rpx;
  border-bottom: 1px solid #fff;
  text-align: center;
  color: #eee;
  font-size: 26rpx;
}
.oprate_btns{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.study_btn,.relax_btn{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  text-align: center;
  line-height: 60px;
  border: 10rpx solid lightseagreen;
  background-color: #fff;
  color: #333;
}
.relax_btn{
  margin-left: 100rpx;
}